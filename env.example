# Copy this file to .env.local for local development
# For production, set these as environment variables in Vercel

# Database (Postgres + pgvector)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hivemail?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl-rand-base64-32"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Encryption Master Key (32 bytes base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_MASTER_KEY="your-encryption-master-key-here"

# Worker URL (Cloud Run)
WORKER_BASE_URL="http://localhost:8000"

# Cloud Tasks (optional - for production)
GCP_PROJECT_ID=""
GCP_LOCATION="us-central1"
GCP_QUEUE_NAME="email-agent-jobs"
GCP_SERVICE_ACCOUNT_EMAIL=""

# Redis (optional - for local queue)
REDIS_URL="redis://localhost:6379"
